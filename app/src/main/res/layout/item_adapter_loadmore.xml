<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/dp_12"
    android:layout_marginEnd="@dimen/dp_16"
    android:layout_marginStart="@dimen/dp_16"
    android:id="@+id/cl_loadmore">

    <TextView
        android:id="@+id/tv_loadmore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看更多"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_6"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_6"
        android:textColor="#0089CD"
        android:textSize="12sp"/>

    <ImageView
        android:id="@+id/iv_loadmore"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        app:layout_constraintLeft_toRightOf="@+id/tv_loadmore"
        android:layout_marginStart="@dimen/dp_4"
        app:layout_constraintTop_toTopOf="@+id/tv_loadmore"
        app:layout_constraintBottom_toBottomOf="@+id/tv_loadmore"
        android:src="@drawable/ic_drop_down"/>

</androidx.constraintlayout.widget.ConstraintLayout>