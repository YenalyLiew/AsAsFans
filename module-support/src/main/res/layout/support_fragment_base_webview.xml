<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/base_web_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:id="@+id/base_web_v_status"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <RelativeLayout
        android:id="@+id/base_web_rl_title"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_below="@id/base_web_v_status"
        android:background="@color/text_color_reverse">

        <ImageView
            android:id="@+id/common_title_tiv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:scaleType="center"
            android:background="@drawable/ic_baseline_arrow_back_24" />


        <TextView
            android:id="@+id/common_title_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:maxWidth="@dimen/dp_250"
            android:minWidth="@dimen/dp_100"
            android:singleLine="true"
            android:textColor="@color/font_strong"
            android:textSize="@dimen/dp_17" />


<!--        <ImageView-->
<!--            android:id="@+id/common_title_iv_kefu"-->
<!--            android:layout_width="@dimen/dp_23"-->
<!--            android:layout_height="@dimen/dp_23"-->
<!--            android:layout_alignParentRight="true"-->
<!--            android:layout_centerVertical="true"-->
<!--            android:layout_marginRight="@dimen/dp_16"-->
<!--            android:src="@drawable/support_icon_kefu" />-->

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/base_web_fl_web_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</RelativeLayout>